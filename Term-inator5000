Class =         PlayerInfo 

Variables =     PlayerName = string
                PlayerNameCheck = string 
                AgeName = double 
                StudentCheck = bool
                StudentAnswer = string
                StudentSee = string

Objects =       askName()
                askAge()
                studentChecking()
                displayPlayerInfo()

Class =         CourseInfo

Variables =     CourseName = string[]
                OptionNumber = int
                OptionBiology = string[]
                StoreCourseName = string
 
Objects =       askCourse()
                askOption()
 

Class =         GameInfo

Variables =     StartGame
                ResponseOfPlayer
                CourseDone
                ExitGame
 
 Objects =      None yet
 
